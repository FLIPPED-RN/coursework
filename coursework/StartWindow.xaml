<Window x:Class="coursework.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:coursework"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" FontSize="30" Grid.Row="3" Width="400">Добро пожаловать!</TextBlock>
        <Button x:Name="StartButton" Grid.Row="4" FontSize="20" Margin="50, 10, 50, 10" Width="150" Click="Button_Click">Войти</Button>
        <TextBlock Grid.Row="4" Visibility="Collapsed" Text="Загрузка..." Margin="50, 10, 50, 10" Width="400" TextAlignment="Center" FontSize="20" x:Name="TextLoading"></TextBlock>
    </Grid>
</Window>
